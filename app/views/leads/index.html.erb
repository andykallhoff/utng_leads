<h1>Listing all Leads</h1>

<div class="row">
  <div class="col-md-12">

    <table class="table table-dark table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>Age/Gen</th>
          <th>Street</th>
          <th>City</th>
          <th>State</th>
          <th>Zip</th>
          <th class='text-center'>Active?</th>
          <th class='text-center'>Recruited?</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @leads.each do |lead| %>
          <tr>
            <td><%= link_to(lead&.full_name, lead) %></td>
            <td><%= lead&.email&.downcase %></td>
            <td><%= display_phone(lead.phone_number) %></td>
            <td><%= "#{lead&.age}, #{lead&.gender.to_s}" %></td>
            <td><%= lead&.street %></td>
            <td><%= lead&.city %></td>
            <td><%= lead&.state %></td>
            <td><%= lead&.zip %></td>
            <td class='text-center'><%= lead.active_contact ? "&#10003;".html_safe : '' %></td>
            <td class='text-center'><%= lead.is_army ? "&#10003;".html_safe : '' %></td>
            <td>
              <div class="btn-group">
                <%= link_to 'edit', edit_lead_path(lead), class: 'btn btn-sm btn-primary' %>
                <%= link_to 'delete', lead_path(lead), method: 'delete', class: 'btn btn-sm btn-danger',
                            data: {confirm: "Do you want to delete #{lead&.full_name}?"} %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
