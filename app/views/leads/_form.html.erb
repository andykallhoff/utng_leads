<%= form_for(@lead, html: { class: 'form-horizontal' }) do |f| %>
  <div class='row'>
    <div class='col-6'>

      <div class="form-row">
        <div class="form-group">
          <%= f.label :first_name, title: 'First Name', class: 'required' %>
          <%= f.text_field :first_name, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, title: 'Last Name', class: 'required' %>
          <%= f.text_field :last_name, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :gender, title: 'Gender', class: 'required' %>
          <%= f.select :gender,
                options_for_select(Lead.genders, selected: Lead.genders.select{|g| g == 'male'}),
                {},
                {title: 'Gender', class: 'form-control'} %>
        </div>

        <div class="form-group">
          <%= f.label :age, title: 'Age', class: 'required' %>
          <%= f.select :age,
                options_for_select(17...45, selected: 18),
                {},
                {title: 'Age', class: 'form-control'} %>
        </div>

        <div class="form-group">
          <%= f.label :email, title: 'Email', class: 'required' %>
          <%= f.email_field :email, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :phone_number, title: 'Phone Number', class: 'required' %>
          <%= f.text_field :phone_number, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :street, 'Address street', title: 'Address Street' %>
          <%= f.text_field :street, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :city, title: 'City' %>
          <%= f.text_field :city, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :state, title: 'State' %>
          <%= f.select :gender,
                options_for_select(STATES, selected: STATES.select{|s| s == 'UT'}),
                {},
                {title: 'State', class: 'form-control'} %>
        </div>

        <div class="form-group">
          <%= f.label :zip, 'Zipcode', title: 'Zipcode' %>
          <%= f.text_field :zip, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :comment, 'Comments', title: 'Zipcode' %>
          <%= f.text_area :comment, rows: 10, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Submit', class: 'btn btn-primary' %>
        </div>

      </div>
    </div>
  </div>
<% end %>
